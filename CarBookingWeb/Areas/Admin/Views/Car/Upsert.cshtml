@model Car


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient nl-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "แก้ไขข้อมูล" : "เพิ่มรายการ")รถ@(Model.Id != 0 ? "" : "ใหม่")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            
            <div class="row">
                <div class="col-12">

                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="CarName" class="form-control border-0 shadow" />
                            <label asp-for="CarName" class="ms-2"></label>
                            <span asp-validation-for="CarName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="CarType" class="form-control border-0 shadow" />
                            <label asp-for="CarType" class="ms-2"></label>
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="TotalSeats" class="form-control border-0 shadow" />
                            <label asp-for="TotalSeats" class="ms-2"></label>
                            <span asp-validation-for="TotalSeats" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="pricePerKm" class="form-control border-0 shadow" />
                            <label asp-for="pricePerKm" class="ms-2"></label>
                            <span asp-validation-for="pricePerKm" class="text-danger"></span>
                        </div>
                        

                        <div class="row pt-3">
                            <div class="col-6 col-md-6 mx-auto">
                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-outline-success form-control">ยืนยันการเพิ่มรถใหม่</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-success form-control">ยืนยันการแก้ไขข้อมูล</button>
                                }

                            </div>
                            <div class="col-6 col-md-6 mx-auto">
                                <a asp-controller="Car" asp-action="Index" class="btn btn-outline-secondary form-control">กลับสู่หน้าเมนู</a>
                            </div>

                        </div>
                        <div asp-validation-summary="All"></div> <!-- แสดง inValid ทั้งหมด -->
                    </div>
                </div>
                
            </div>

        </form>

    </div>
</div>



<!-- โค้ดสำหรับ แสดง invalid แบบ real time-->
@section Scripts{
    @{
        
        <partial name="_ValidationScriptsPartial" />
    }
}